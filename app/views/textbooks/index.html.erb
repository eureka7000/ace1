<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 col-sm-12 main">

            <h2 class="sub-header"><span class="fa fa-book" aria-hidden="true" style="top: 5px"></span> Listing Textbooks</h2>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price(단위 : 원)</th>
                        <th>Grade (1~6)</th>
                        <th>Sub category</th>
                        <th colspan="3"><i class="fa fa-cog"></i></th>
                    </tr>
                    </thead>

                    <tbody>
                    <% @textbooks.each do |textbook| %>
                        <tr>
                            <td><%= textbook.name %></td>
                            <td><%= textbook.price %></td>
                            <td><%= textbook.grade %></td>
                            <td><%= textbook.sub_category %></td>
                            <td><%= link_to 'Show', textbook %></td>
                            <td><%= link_to 'Edit', edit_textbook_path(textbook) %></td>
                            <td><%= link_to 'Destroy', textbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>

                <%= will_paginate @textbooks, renderer: BootstrapPagination::Rails %>

                <br>

                <%= link_to 'New Textbook', new_textbook_path, class: 'btn-u btn-u-dark-blue rounded' %>

            </div>

        </div>
    </div>
</div>

