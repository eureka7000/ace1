<div class="wrapper">
  <div class="col-md-2"></div>
  <div class="col-md-8 col-xs-12 margin-top-20">

    <div class="container-fluid margin-top-20">

      <% if @blog.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>
            <ul>
              <% @blog.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <form class="sky-form">
        <header class="heading-md"><span style="color: #00a2ed"><i class="fa fa-paper-plane-o"></i></span>&nbsp; <%= Blog::BLOG_TYPES[@blog.blog_type] %></header>

        <fieldset>
          <section>
            <label class="label"><strong>작성자 :</strong>&nbsp;<%='관리자' if @blog.admin_yn == 'Y' %><%= @user.user_name if @blog.admin_yn == 'N' %></label>
          </section>

          <section>
            <label class="label"><strong>제 목 :</strong>&nbsp; <%= @blog.title %></label>
          </section>

          <section>
            <label>내 용 :</label>
            <label class="label"><%= simple_format(@blog.content) %></label>
          </section>


          <% unless @blog.file_name.blank? %>
              <section>
                <label>사진</label><br>
                <label><img src="<%= @blog.file_name %>" style="width: 80%;" class="img-responsive"></label>
              </section>
          <% end %>

        </fieldset>
      </form>


      <div class="col-md-12 text-right margin-top-20 margin-bottom-30">
        <% unless session[:admin].nil? %>
            <a href="/blogs" class="btn-u rounded btn-u-yellow">확인</a>
        <% else %>
            <a href="/blogs/<%= Blog::BLOG_NAMES[@blog.blog_type] %>" class="btn-u rounded btn-u-yellow">확인</a>
        <% end %>
      </div>


    </div>

  </div>
  <div class="col-md-2"></div>
</div>