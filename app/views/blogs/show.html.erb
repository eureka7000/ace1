<div class="container-fluid" style="margin-top: 50px">
<div class="col-md-12 margin-top-20" >
  <!--  panel -->
  <div class="panel panel-blue">
    <div class="panel-heading">
      <h3 class="panel-title" style="font-size: 20px" ><i class="fa fa-tasks"></i> <%= @blog.title %></h3>
    </div>
    <!-- Form Controls -->
    <div class="tag-box tag-box-v3 form-page boMot">

      <div>
        <ul class="list-unstyled list-inline blog-info">
          <li><i class="fa  fa-user"></i> <%= @blog.user_id %></li>
        </ul>
      </div>
      </br>

      <% Blog::BLOG_TYPES.each_pair do |key, value|%>
          <% unless @blog.blog_type != key %>
              <h5>블로그 타입 : <span style="color: black"><%= value %></span> </h5>
          <% end %>
      <% end %>

      </br>

      <!--내용입력-->
      <h4>내용 : </h4>
      <h4><span style="color: black"><%= @blog.content %></h4>

      <!-- user_id -->
      <input hidden type="text" name="blog[user_id]" value="<%= @blog.user_id %>">




      <div class="col-md-12 text-right">
        <% str = '/blogs/' %>
        <% Blog::BLOG_NAMES.each_pair do |key, value| %>
            <% if @blog.blog_type == key %>
              <% str += value %>
            <% end %>
        <% end %>

        <%= link_to '확인', str %>
      </div>

      <div class="margin-bottom-20"></div>

    </div>
    <!-- End Form Controls  -->

  </div>
</div>
</div>