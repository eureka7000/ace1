<% str = '' %>
<% Blog::BLOG_TYPES.each_pair do |key, value| %>
    <% if @blog_type == key %>
        <% str = value %>
    <% end %>
<% end %>

<!--=== indicate ===-->
<div class="breadcrumbs">
  <div class="container">

    <h2 class="pull-left" style="color: black">Blog / <%= str %></h2>
    <!--ul class="pull-right breadcrumb" style="font-size:15px">
      <li><a href="index.html">Home</a></li>
      <li style="color:#00c9f8">자기주도학습</li>

    </ul-->
  </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End indicate ===-->


<!--=== Content Part ===-->
<div class="container content">
  <div class="row">

    <!-- Left Sidebar -->

    <div class="col-md-9 md-margin-bottom-40 blog_eureka">

      <% @blogs.each do |blog| %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h2 class="panel-title"><i class="fa fa-tasks"></i><a style="color: black; font-size: 22px" href="/blogs/<%= blog.id %>"> <%= blog.title %></a></h2>
            </div>
            <div class="panel-body">
              <i class="fa fa-calendar"></i> <%= blog.created_at %> &nbsp;
              <i class="fa fa-user"></i><%= blog.user_id %>
              </br></br>
              <p><%= blog.content %></p>
              <% unless current_user.nil? %>
                <% unless blog.user_id != current_user.id %>
                    <div class="col-md-12 text-right">
                      <hr class="devider devider-dashed">
                      <div class="col-md-10"></div>
                      <div class="col-md-1">
                        <%= link_to 'Edit', edit_blog_path(blog, blog_type: @blog_type), :class => 'btn btn-link' %> &nbsp;
                      </div>
                      <div class="col-md-1">
                        <%= button_to 'delete', blog, :method=>:delete, :class => 'btn btn-link' %>
                      </div>
                    </div>
                <% end %>
              <% end %>
            </div>
          </div>
      <% end %>

      <%= link_to '글 작성', new_blog_path(blog_type: @blog_type), :class => 'btn btn-success' %>

      <div class="text-center">
        <ul class="pagination">
          <%= will_paginate @blogs, renderer: BootstrapPagination::Rails %>
        </ul>
      </div>

    </div>
    <!--End left Sidebar -->





    <!-- Right Sidebar -->
    <div class="col-md-3 margin-top-30 " style="border:1px solid #fff">
      <!-- Social Icons -->
      <div class="shadow-wrapper">
        <div class="tag-box tag-box-v1 box-shadow shadow-effect-2">
          <div class="headline headline-md"><h2>소식지 신청하기</h2></div>
          <div id="home-1" class="tab-pane active">
            <p>유레카메스 소식지나 서비스업데이트에 대한 최신정보를 이메일로 받고자 하시면 신청하시기 바랍니다.</p>
          </div>

          <div class="clearfix">
            <!-- Basic Form -->

            <form class="margin-top-30 " role="form" >
              <div class="form-group">
                <label for="exampleInputEmail1">받아보실 메일주소</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="메일주소를 입력해주세요.">
              </div>
            </form>
            <div>
              <button type="submit" class="btn-u btn-u-blue" data-toggle="modal" data-target=".bs-example-modal-sm">메일신청하기</button>
            </div>
            <!-- End Basic Form -->
          </div>

        </div>
      </div>

      <!-- End Social Icons -->


      <!-- Social Icons -->
      <div class="shadow-wrapper">
        <div class=" margin-bottom-30 tag-box tag-box-v1 box-shadow shadow-effect-2">
          <div class="headline headline-md"><h2>최근소식</h2></div>
          <ul class="list-unstyled blog-trending margin-bottom-50">
            <li>
              <h3><a href="#">유레카메스홈페이지를...</a></h3>
              <p>2016-06-01</p>
            </li>
            <li>
              <h3><a href="#">유레카메스홈페이지를...</a></h3>
              <p>2016-06-01</p>
            </li>
            <li>
              <h3><a href="#">유레카메스홈페이지를...</a></h3>
              <p>2016-06-01</p>
            </li>
            <li>
              <h3><a href="#">유레카메스홈페이지를...</a></h3>
              <p>2016-06-01</p>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
      </div>
      <!-- End Social Icons -->

    </div>
    <!-- End Right Sidebar -->

  </div>
</div>

