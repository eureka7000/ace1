<!-- Left Sidebar -->

    <div class="col-md-9 md-margin-bottom-40 blog_eureka">

      <% @blogs.each do |blog| %>
          <div class="panel panel-default">

            <div class="panel-heading">
              <% if current_user.nil? %>
                  <h2 class="panel-title"><i class="fa fa-tasks"></i><a style="color: black; font-size: 22px"> <%= blog.title %></a></h2>
              <% else %>
                  <h2 class="panel-title"><i class="fa fa-tasks"></i>
                    <a style="color: black; font-size: 22px" href="/blogs/<%= blog.id %>"> <%= blog.title %></a>
                  </h2>
              <% end %>
            </div>

            <div class="panel-body">
              <i class="fa fa-calendar"></i> <%= blog.created_at.localtime.strftime('%Y-%m-%d %H:%M') %> &nbsp;
              <i class="fa fa-user"></i> <%= blog.admin_yn == "Y" ? "관리자" : blog.user.user_name %>
              </br></br>

              <p><%= ActionView::Base.full_sanitizer.sanitize(blog.content).truncate(50) %></p>

            </div>
          </div>
      <% end %>

      <% if current_user.nil? %>
          <% unless @blog_type == '5' || @blog_type == '6' || @blog_type == '7' %>
              <button class="btn btn-success" data-toggle="modal" data-target=".bs-example-modal-sm">글 작성</button>
          <% end %>
      <% else %>
          <% unless @blog_type == '5' || @blog_type == '6' || @blog_type == '7' %>
              <%= link_to '글 작성', new_blog_path(blog_type: @blog_type), :class => 'btn btn-success' %>
          <% end %>
      <% end %>

      <div class="text-center">
        <ul class="pagination">
          <%= will_paginate @blogs, renderer: BootstrapPagination::Rails %>
        </ul>
      </div>

    </div>
<!--End left Sidebar -->


