<div class="col-md-9 margin-top-20">

  <% unless @blogs.blank? %>
      <% @blogs.each do |blog| %>
          <hr class="no-margin margin-bottom-20">
          <div class="tag-box box-shadow shadow-effect-1">
            <h4><span style="color: #00a2ed"><i class="fa fa-paper-plane-o"></i></span> &nbsp;<%= blog.title %></h4>

            <h6>
              <ul class="list-unstyled list-inline blog-info text-right">
                <li><span style="color: #1e347b"><i class="fa fa-calendar tooltips" data-toggle="tooltips" data-placement="top" data-original-title="등록일"></i></span> <%= blog.created_at.in_time_zone("Asia/Seoul").strftime('%Y/%m/%d') %></li>
                <li><span style="color: darkred"><i class="fa fa-pencil tooltips" data-toggle="tooltips" data-placement="top" data-original-title="작성자"></i></span> <%= blog.admin_yn == 'Y' ? '관리자' : blog.user.user_name %></li>
                <% unless blog.file_name.blank? %>
                    <li><i class="fa fa-camera-retro tooltips" data-toggle="tooltips" data-placement="top" data-original-title="사진 있음"></i></li>
                <% end %>
                <% unless current_user.nil? %>
                    <li><a href="/blogs/<%= blog.id %>"><span style="color: orange"><i class="fa fa-search"></i></span>&nbsp;더보기</a></li>
                <% end %>
              </ul>
            </h6>
          </div>

      <% end %>
      <div class="text-center">
        <ul class="pagination">
          <%= will_paginate @blogs, renderer: BootstrapPagination::Rails %>
        </ul>
      </div>

  <% else %>
      <hr class="no-margin margin-bottom-20">
      <div class="tag-box box-shadow shadow-effect-1">
        <h4 class="text-center"><span style="color: #00a2ed"><i class="fa fa-paper-plane-o"></i></span> 등록된 게시물이 없습니다.</h4>
      </div>
  <% end %>
</div>

<!-- Alert -->
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content modAlertch">
      <div class="modal-header">
        <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
        <h4 id="myLargeModalLabel3" class="modal-title"><i class="glyphicon glyphicon-check"></i> 알림</h4>
      </div>

      <div class="modal-body modAlert">
        <div class="modAlertbox">
          <p>로그인이 필요합니다!</p>
          <ul>
            <li><%=link_to '로그인',  new_user_session_path, :class => 'btn btn-link' %></li>
            <li><%=link_to '회원가입', new_user_registration_path, :class => 'btn btn-link' %></li>

          </ul>
        </div>
        <div class="margin-bottom-20"></div>
      </div>
    </div>
  </div>
</div>
<!-- End Alert -->