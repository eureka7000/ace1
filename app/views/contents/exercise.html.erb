                        <% rst = 5 - @unit_concept.level %>
                        <span style="-webkit-text-fill-color: orangered">
                    <% (1..@unit_concept.level).each do |idx| %>
                    <i style="color: orangered" class="fa fa-star"></i>
                    <% end%>
                    </span>
                        <span style="-webkit-text-fill-color: orangered">
                    <% (1..rst).each do |idx| %>
                    <i class="fa fa-star-o"></i>
                    <% end %>
                    </span>
                    <% end %>
                    <span style="-webkit-text-fill-color: darkblue"><%= @unit_concept.code.upcase %></span> <%= @unit_concept.name %>
                  </h5>
              <% else %>
