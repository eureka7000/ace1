                         <i class="fa fa-circle"></i>
                        &nbsp;
                        <span style="-webkit-text-fill-color: #fc4674"><%= link.code %> </span>
                        <span style="-webkit-text-fill-color: #020202"> : <%= link.name %> </span>
                      </span>
                  <br>
