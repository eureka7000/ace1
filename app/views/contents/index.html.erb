<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">
			<% 
			if @view_type == '1'
				str = "단원별 학습"
			else
				str = "학년별 학습"
			end
			
			if @step > '1' 
				str += " / #{Concept::CATEGORIES[@category]} "
			end
			
			if @step > '2'
				str += " / #{Concept::SUB_CATEGORIES[@sub_category]}"
			end
			
			if @step > '3'
				str += " / #{@concept.concept_name}"
			end	
			
			%>
			<%= str %>
		</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="">Main</a></li>
            <li class="active">
				<a href="/contents">단원별 학습</a>
			</li>
        </ul>
    </div>
</div>

<ul class="row list-row margin-bottom-30">
	
    <% idx = 0 %>	
    
    <% if @step == '1' %>
    
        <% Concept::CATEGORIES.each_pair do |key, value| %>
        
    <li class="col-md-4 md-margin-bottom-30">
        <div class="content-boxes-v2 text-center block-grid-v1 rounded">
            <i class="icon-custom rounded-x <%= Concept::ICONS_BGS[idx] %> fa <%= Concept::FA_ICONS[idx] %> "></i>
            <div class="content-boxes-in-v3">
                <h3><a href="/contents?view_type=<%= @view_type %>&step=2&category=<%= key %>"><%= value  %></a></h3>
            </div>
        </div>
    </li>
                
            <% idx += 1 %>            
        
        <% end %>
        
    <% elsif @step == '2' %>    
    
        <% Concept::SUB_CATEGORIES.each_pair do |key, value| %>
        
            <% if @category.first(2) == key.first(2) %>
        
                <li class="col-md-4 md-margin-bottom-30">
                    <div class="content-boxes-v2 text-center block-grid-v1 rounded">
                        <i class="icon-custom rounded-x <%= Concept::ICONS_BGS[idx] %> fa <%= Concept::FA_ICONS[idx] %> "></i>
                        <div class="content-boxes-in-v3">
                            <h3><a href="/contents?view_type=<%= @view_type %>&step=3&category=<%= @category %>&sub_category=<%= key %>"><%= value  %></a></h3>
                        </div>
                    </div>
                </li>
                
                <% idx += 1 %>            
            
            <% end %>
        
        <% end %>    
        
    <% elsif @step == '3' %>

		<% @concepts.each do | concept | %>
		
    <li class="col-md-4 md-margin-bottom-30">
        <div class="content-boxes-v2 text-center block-grid-v1 rounded">
            <i class="icon-custom rounded-x <%= Concept::ICONS_BGS[idx] %> fa <%= Concept::FA_ICONS[idx] %> "></i>
            <div class="content-boxes-in-v3">

              <!--
              <h3><a href="/contents?view_type=<%= @view_type %>&step=4&category=<%= @category %>&sub_category=<%= @sub_category %>&concept_id=<%= concept.id %>"><%= concept.concept_name %></a></h3>
              -->

              <h3><a data-toggle="modal" data-target="#level<%=concept.id%>" style="text-align: center"><%= concept.concept_name %></a></h3>

            </div>
              <!-- Modal -->
              <div class="modal fade" id="level<%=concept.id%>" role="dialog">
              <div class="modal-dialog modal-md">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div class="modal-title">
                      <span class="label rounded-2x label-aqua">난이도 선택</span>
                    </div>
                  </div>
                  <div class="modal-body">

                    <div class="row">
                      <div class="col-md-12">

                        <div class="col-md-4 content-boxes-v6 md">

                          <a href="/contents?view_type=<%= @view_type %>&step=4&category=<%= @category %>&sub_category=<%= @sub_category %>&student=<%= @student%>&concept_id=<%= concept.id %>&level=<%= @student == 'middle' ? '1' : '3' %>"><i class="rounded-x icon-link"></i></a>
                          <h1 class="title-v3-md text-uppercase margin-bottom-10">초급</h1>

                        </div>
                        <div class="col-md-4 content-boxes-v6 md">
                          <a href="/contents?view_type=<%= @view_type %>&step=4&category=<%= @category %>&sub_category=<%= @sub_category %>&student=<%= @student%>&concept_id=<%= concept.id %>&level=<%= @student == 'middle' ? '2' : '4' %>" ><i class="rounded-x icon-link"></i></a>
                          <h1 class="title-v3-md text-uppercase margin-bottom-10">중급</h1>
                        </div>
                        <div class="col-md-4 content-boxes-v6 md">
                          <a href="/contents?view_type=<%= @view_type %>&step=4&category=<%= @category %>&sub_category=<%= @sub_category %>&student=<%= @student%>&concept_id=<%= concept.id %>&level=<%= @student == 'middle' ? '3' : '5' %>" ><i class="rounded-x icon-link"></i></a>
                          <h1 class="title-v3-md text-uppercase margin-bottom-10">상급</h1>
                        </div>

                      </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                  </div>
                </div>
              </div>
            </div> <!-- Modal END-->

        </div>
    </li>
	
			<% idx += 1 %>

  <% end %>
		
	<% elsif @step == '4' %>

		<% @unit_concepts.each do | unit_concept | %>
          <% if unit_concept.level <= @level.to_i() %>
            <li class="col-md-4 md-margin-bottom-30">
                <div class="content-boxes-v2 text-center block-grid-v1 rounded">
                    <i class="icon-custom rounded-x <%= Concept::ICONS_BGS[idx] %> fa <%= Concept::FA_ICONS[idx] %> "></i>
                    <div class="content-boxes-in-v3">
                <ul class="star-vote">
                  <% unless unit_concept.level.nil? %>
                      <% rst = 5 - unit_concept.level %>
                              <% (1..unit_concept.level).each do |idx| %>
                              <li><i class="fa fa-star"></i></li>
                              <% end%>

                              <% (1..rst).each do |idx| %>
                              <li><i class="fa fa-star-o"></i></li>
                              <% end %>
                  <% end %>
                          </ul>
                          <h3><a href="/contents/<%= unit_concept.id %>"><%= unit_concept.name %></a></h3>
                    </div>
                </div>
            </li>

              <% idx += 1 %>

            <% end %>

        <% end %>
	
    <% end %>

</ul>

