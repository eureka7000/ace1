<script type="text/javascript">
  $(document).ready(function(){
    var index = 2;

    $("#btn1").click(function(){
      $("#ucd1"+index).show();
      index++;

      var count = Number($("#badge1").text());
      if(count == -1){
        count = 0;
      }
      if (count > 0){
        $("#badge1").text(count-1);
      }
      if (count == 1){
        $("#btn1").hide();
        $("#badge1").hide();
      }
    });
  });
</script>


