          <div class="col-md-6">

            <p>
              <% unless @unit_concept.level.nil? %>
                  <% rst = 5 - @unit_concept.level %>
                  <span style="color:red">
                    <% (1..@unit_concept.level).each do |idx| %>
                    *
                    <% end%>
                    </span>
                    <span style="color:gray">
                    <% (1..rst).each do |idx| %>
                    *
                    <% end %>
                    </span>
              <% end %>
