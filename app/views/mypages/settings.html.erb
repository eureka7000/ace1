<!--=== Profile ===-->
<div class="container content profile">
    <div class="row">

        <%= render :partial=>"left_sidebar"%>

        <!-- Profile Content -->
        <div class="col-md-9">
        
            <div class="profile-body margin-bottom-20">
                
                <div class="tab-v1">
                    
                    <ul class="nav nav-justified nav-tabs">
                    <li class="<%= 'active' if @active_tab == '1' %>"><a data-toggle="tab" href="#profile">Edit Profile</a></li>
                    <li class="<%= 'active' if @active_tab == '2' %>"><a data-toggle="tab" href="#passwordTab">회원정보</a></li>
                    <li class="<%= 'active' if @active_tab == '3' %>"><a data-toggle="tab" href="#payment">Payment Options</a></li>
                    <li class="<%= 'active' if @active_tab == '4' %>"><a data-toggle="tab" href="#settings">Notification Settings</a></li>
                    </ul>
                    
                    <div class="tab-content">
                        
                        <div id="profile" class="profile-edit tab-pane fade <%= 'in active' if @active_tab == '1' %>">
                            
                            <h2 class="heading-md">Manage your Name, ID and Email Addresses.</h2>
