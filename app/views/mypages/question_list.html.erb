<!--=== Profile ===-->
<div class="container content profile">
  <div class="row">

    <%= render :partial=>"left_sidebar"%>

    <!-- Profile Content -->
    <div class="col-md-9">

      <div class="profile-body margin-bottom-20">

        <table class="table" style="table-layout: fixed;">
          <thead>
          <tr>
            <th>No.</th>
            <th colspan="3">개 념</th>
            <th colspan="3">질문 제목</th>
            <th colspan="6">질문 내용</th>
            <th colspan="2">options</th>
          </tr>
          </thead>
          <tbody>
          <% count = 0 %>
          <% if @questions.each do |question| %>
            <% count += 1 %>
            <tr>
              <td><%= count %></td>
              <td colspan="3"><%= question.unit_concept.name %></td>
              <td colspan="3" style="white-space: nowrap; text-overflow: ellipsis; overflow: hidden;"><%= question.title %></td>
              <td colspan="6" style="white-space: nowrap; text-overflow: ellipsis; overflow: hidden;"><%= question.content %></td>
              <td colspan="2"><a href="/questions/<%= question.id %>">show</a>&nbsp;&nbsp;<a href="/questions/<%= question.id %>/edit">edit</a></td>
            </tr>
          <% end %>
          <% end %>
          </tbody>
        </table>

     </div>
    </div>
    <!-- End Profile Content -->


  </div>
</div><!--/container-->