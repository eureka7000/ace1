<p id="notice"><%= notice %></p>

<h1>Listing Blog Replies</h1>

<table>
  <thead>
    <tr>
      <th>Blog</th>
      <th>User</th>
      <th>Comment</th>
      <th>Group</th>
      <th>Parent reply</th>
      <th>Depth</th>
      <th>Order no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_replies.each do |blog_reply| %>
      <tr>
        <td><%= blog_reply.blog_id %></td>
        <td><%= blog_reply.user_id %></td>
        <td><%= blog_reply.comment %></td>
        <td><%= blog_reply.group_id %></td>
        <td><%= blog_reply.parent_reply_id %></td>
        <td><%= blog_reply.depth %></td>
        <td><%= blog_reply.order_no %></td>
        <td><%= link_to 'Show', blog_reply %></td>
        <td><%= link_to 'Edit', edit_blog_reply_path(blog_reply) %></td>
        <td><%= link_to 'Destroy', blog_reply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog reply', new_blog_reply_path %>
