    <div class="container-fluid" style="margin-top: 50px">
        
        <div class="row">
            
            <div class="col-sm-12 col-md-12 main">
                
                <h2 class="sub-header"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> 사용자관리</h2>
                    
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>전자우편(ID)</th>
                                <th>이름</th>
                                <th>전화번호</th>
                                <th>사용자타입</th>
                                <th>지역</th>
                                <th>접속횟수</th>
                                <th colspan="3"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @users.each do |user| %>
                            <tr>
                                <td><%= user.email %></td>
                                <td><%= user.user_name %></td>
                                <td><%= user.phone %></td>
                                <td><%= user.user_types[0].user_type %></td>
                                <td><%= user.location %></td>
                                <td><%= user.sign_in_count %></td>
                                <td><%= link_to 'Show', user %></td>
                                <td><%= link_to 'Edit', edit_user_path(user) %></td>
                                <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            
                <%= link_to '사용자 등록', new_user_path, :class => 'btn btn-primary align-right' %>
            
            </div>
            
        </div>
    </div>