<div class="row">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark"><i class="fa-fw fa fa-tree"></i> Users</h1>
    </div>
</div>

<% unless notice.blank? %>
    <p class="alert alert-warning"><%= notice %></p>
<% end %>

<div class="row">

    <div class="col-md-12">

        <div class="well">

            <div class="row">

                <div class="col-md-12">

                    <table class="table table-bordered table-striped" style="clear: both">
                    <tr>
                    <td style="width:25%;"><b>이름</b></td>
                    <td style="width:75%"><%= @user.user_name %></td>
                    </tr>

                    <tr>
                    <td style="width:25%;"><b>전자우편</b></td>
                    <td style="width:75%"><%= @user.email %></td>
                    </tr>
                    
                    <tr>
                    <td style="width:25%;"><b>지역</b></td>
                    <td style="width:75%"><%= @user.location %></td>
                    </tr>                    
                    
                    <tr>
                    <td style="width:25%;"><b>전화번호</b></td>
                    <td style="width:75%"><%= @user.phone %></td>
                    </tr>
                    
                </table>

                </div>

            </div>

            <footer>
                <%= link_to 'Edit', edit_user_path(@user), :class => 'btn btn-primary' %>
                <%= link_to 'Back', users_path, :class => 'btn btn-default' %>
            </footer>

        </div>
    </div>
</div>