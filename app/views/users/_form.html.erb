<div class="row">

    <div class="col-md-12 ">

        <div class="well">

            <%= form_for(@user, :html => {:role=>'form', :class => 'form-horizontal' } ) do |f| %>

                <div class="row">

                    <div class="col-md-12 ">

                        <% if @user.errors.any? %>
                        <div id="error_explanation">
                            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                            <ul>
                                <% @user.errors.full_messages.each do |msg| %>
                                    <li><%= msg %></li>
                                <% end %>
                            </ul>
                        </div>
                        <% end %>

                        <div class="form-group">
                            <%= f.label :user_name, :class => 'col-sm-1 control-label' %>
                            <div class="input-group col-sm-4">
                                <%= f.text_field :user_name, :class => 'form-control' %>
                            </div>
                        </div>

                        <div class="form-group">
                            <%= f.label :email, :class => 'col-sm-1 control-label' %>
                            <div class="input-group col-sm-4">
                                <%= f.text_field :email, :class => 'form-control' %>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <%= f.label :phone, :class => 'col-sm-1 control-label' %>
                            <div class="input-group col-sm-4">
                                <%= f.text_field :phone, :class => 'form-control' %>
                            </div>
                        </div> 
                        
                        <div class="form-group">
                            <%= f.label :location, :class => 'col-sm-1 control-label' %>
                            <div class="input-group col-sm-4">
                                <%= f.text_field :location, :class => 'form-control' %>
                            </div>
                        </div>                                                  

                    </div>

                </div>

                <footer>
                    <%= f.submit 'submit', :class => 'btn btn-success' %>
                    <% unless @user.id.blank? %><%= link_to 'Show', @user, :class => 'btn btn-info' %><% end %>
                    <%= link_to 'Back', users_path, :class => 'btn btn-info' %>
                </footer>

            <% end %>

        </div>

    </div>

</div>