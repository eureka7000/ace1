<p id="notice"><%= notice %></p>

<h1>Listing Teachers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>School</th>
      <th>Confirm yn</th>
      <th>Confirmed at</th>
      <th>Comfirmed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.user_id %></td>
        <td><%= teacher.school_id %></td>
        <td><%= teacher.confirm_yn %></td>
        <td><%= teacher.confirmed_at %></td>
        <td><%= teacher.comfirmed_id %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

