    <div class="container-fluid" style="margin-top: 50px">
        
        <div class="row">
            
            <div class="col-sm-12 col-md-12 main">
                
                <h2 class="sub-header"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Admin / 학교관리자 / 학원관리자</h2>
                    
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>Salt</th>
                                <th colspan="3"><span class="glyphicon glyphicon-cog" aria-hidden="true"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @admins.each do |admin| %>
                            <tr>
                                <td><%= admin.name %></td>
                                <td><%= admin.email %></td>
                                <td><%= admin.password %></td>
                                <td><%= admin.salt %></td>
                                <td><%= link_to 'Show', admin %></td>
                                <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
                                <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            
                <%= link_to 'New Admin', new_admin_path, :class => 'btn btn-primary align-right' %>
            
            </div>
            
        </div>
    </div>