    <div class="container-fluid" style="margin-top: 50px">
        
        <div class="row">
            
            <div class="col-sm-12 col-md-12 main">
                
                <h2 class="sub-header"><span class="glyphicon glyphicon-stats" aria-hidden="true"></span> 학년별 컨텐츠 </h2>
                
                <div class="row">
                </div>
                    
                <div class="table-responsive">
                    
                    <table class="table table-striped">
                        <thead>
                            <tr>
						        <th>Grade</th>
						        <th>Chapter</th>
						        <th>Category</th>
						        <th>Sub category</th>
						        <th>Code</th>
						        <th>Name</th>
                                <th colspan="3"><span class="glyphicon glyphicon-cog" aria-hidden="true"></th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @grade_unit_concepts.each do |grade_unit_concept| %>
                        <tr>
				        <td><%= UnitConcept::GRADES[grade_unit_concept.grade.to_i] %></td>
				        <td><%= GradeUnitConcept::CHAPTERS[grade_unit_concept.chapter.to_i] %></td>
				        <td><%= GradeUnitConcept::CATEGROIES[grade_unit_concept.category.to_i] %></td>
				        <td><%= GradeUnitConcept::SUB_CATEGROIES[grade_unit_concept.sub_category.to_i] %></td>
				        <td><%= grade_unit_concept.code %></td>
				        <td><%= grade_unit_concept.name %></td>
                        <td><a href="/unit_concepts/<%= grade_unit_concept.unit_concept_id %>?from=grade">Show</a></td>
                        <td><%= link_to 'Edit', edit_grade_unit_concept_path(grade_unit_concept) %></td>
                        <td><%= link_to 'Destroy', grade_unit_concept, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                        </tbody>
                    </table>
                    
                    <%= will_paginate @concepts, renderer: BootstrapPagination::Rails %>
                    
                </div>
            
                <%= link_to '등록', new_grade_unit_concept_path, :class => 'btn btn-primary align-right' %>
            
            </div>
            
        </div>
    </div>