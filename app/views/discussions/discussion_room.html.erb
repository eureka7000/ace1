            <hr>

            <div class="row sky-form" style="border: none">
                <div class="col-md-12 no-padding no-margin">
                    <h3>*<em>문제풀이</em></h3>
                    <% @discussion.discussion_templet.discussion_solutions.each do |discussion_solution| %>
