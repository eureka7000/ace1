<div class="container-fluid" style="margin-top: 50px">

    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-12">
            <h2 class="sub-header"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Concept - <%= @concept.concept_name %></h2>
        </div>
    </div>

    <% unless notice.blank? %>
        <p class="alert alert-warning"><%= notice %></p>
    <% end %>

    <div class="row">

        <div class="col-md-2">
        <p><i class="fa fa-share-alt"></i> Concept</p>
            <div class="well">
                <p><%= @concept.concept_name %></p>
            </div>
        </div>
        
        <div class="col-md-2">
            <p><i class="fa fa-share-alt"></i> Unit Concept</p>
            <div class="row">
                <div class="well">
                </div>
            </div>
            <div class="row">
                <div style="width:30%; float:left; display:inline-block">
                    <input type="text" class="form-control" id="unit_concept_code" placeholder="code" />
                </div>
                <div style="margin-left:5px; width:50%; float:left; display:inline-block">
                    <input type="text" class="form-control" id="unit_concept_name" placeholder="name" />
                </div>
                <div style="float:right; display:inline-block"> 
                    <button type="button" class="btn-u btn-u-green"><i class="fa fa-plus"></i></button>
                </div>    
            </div>    
        </div>    
        
    </div>
    
</div>

<script type="text/javascript">

    $('#unit_concept_name').on('keypress', function(e) {
	    if (e.which == 13) {
		    insertUnitConcept();
	    }
    })
    
    function insertUnitConcept() {
        alert('will be insert unit concept');
    }

</script>