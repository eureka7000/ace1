    <div class="container-fluid" style="margin-top: 50px">
        
        <div class="row">
            
            <div class="col-sm-12 col-md-12 main">
                
                <h2 class="sub-header"><span class="glyphicon glyphicon-stats" aria-hidden="true"></span> Listing Concepts</h2>
                
                <div class="row">
                </div>
                    
                <div class="table-responsive">
                    
                    <select id="cetegory" class="form-control" style="width: 100px;" onchange="changeCategory()">
                    <option value="">Category</option>  
                    <% @categorys.each do |category| %>
                    <option value="<%= category.category %>"><%= Concept::CATEGORIES[category.category] %></option>
                    <% end %>  
                    </select>
                    
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Sub category</th>
                                <th>Concept code</th>
                                <th>Concept name</th>
                                <th>Type</th>
                                <th colspan="3"><span class="glyphicon glyphicon-cog" aria-hidden="true"></th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @concepts.each do |concept| %>
                        <tr>
                        <td><%= Concept::CATEGORIES[concept.category] %></td>
                        <td><%= Concept::SUB_CATEGORIES[concept.sub_category] %></td>
                        <td><%= concept.concept_code %></td>
                        <td><%= concept.concept_name %></td>
                        <td>
                            <% if concept.exercise_yn == 'concept' %>
                            <span class="label rounded-2x label-purple">Concept</span>
                            <% elsif concept.exercise_yn == 'exercise'  %>
                            <span class="label rounded-2x label-brown">Exercise</span>
                            <% end %>
                        </td>    
                        <td><%= link_to 'Show', ( concept.exercise_yn == 'concept' || concept.exercise_yn.nil? ? concept : "/concepts/#{concept.id}/exercise"  ) %></td>
                        <td><%= link_to 'Edit', edit_concept_path(concept) %></td>
                        <td><%= link_to 'Destroy', concept, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                        </tbody>
                    </table>
                    
                    <%= will_paginate @notifications, renderer: BootstrapPagination::Rails %>
                    
                </div>
            
                <%= link_to 'New Concept', new_concept_path, :class => 'btn btn-primary align-right' %>
            
            </div>
            
        </div>
    </div>
    
    <script type="text/javascript">
    
    function changeCategory() {
        location = "/concepts?category=" + $('#cetegory').val();
        
    }
    
    </script>
    
    