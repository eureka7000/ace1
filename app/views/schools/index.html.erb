    <div class="container-fluid" style="margin-top: 50px">
        
        <div class="row">
            
            <div class="col-sm-12 col-md-12 main">
                
                <h2 class="sub-header"><span class="glyphicon glyphicon-education" aria-hidden="true"></span> 학교(학원) 목록</h2>
                    
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>학교(학원)명</th>
                                <th>등급</th>
                                <th>학교.학원 구분</th>
                                <th>주소</th>
                                <th>전화번호</th>
                                <th colspan="3"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @schools.each do |school| %>
                            <tr>
                                <td><%= school.name %></td>
                                <td><%= school.grade %></td>
                                <td><%= school.is_school %></td>
                                <td><%= school.address %></td>
                                <td><%= school.phone %></td>
                                <td><%= link_to 'Show', school %></td>
                                <td><%= link_to 'Edit', edit_school_path(school) %></td>
                                <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            
                <%= link_to '학교(학원) 등록', new_school_path, :class => 'btn btn-primary align-right' %>
            
            </div>
            
        </div>
        
    </div>